<h1>Todo List</h1>

<table>
  <tr>
    <th>Owner</th>
    <th>Public</th>
    <th>Name</th>
  </tr>

  <% @all_tasks.each do |task| %>
    <tr>
      <td><%= task.owner %></td>
      <td><%= task.public_viewable %></td>
      <td><%= task.name %></td>
      <td><%= link_to 'Show', task_path(task) %></td>
    </tr>
  <% end %>
</table>
