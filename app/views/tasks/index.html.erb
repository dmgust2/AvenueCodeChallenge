<div id="logout_link_div">
  <p><%= link_to "Log Out", destroy_user_session_path, method: :delete %></p>
</div>

<div id="todo_list_div" class="form_bg_gray_grad default_border">
  <h1>TODO List</h1>

  <br>
  <br>
  <br>
  <br>

  <table id='todo_list_table' class="data_table">
    <tr>
      <th class="data_table">Owner</th>
      <th class="data_table">Task</th>
      <th class="data_table">Actions</th>
    </tr>

    <% if @task_list.blank? %>
      <tr>
        <td class="data_table"><p><i><strong>No tasks are currently in the system, please add below</strong></i></p></td>
        <td class="data_table"> </td>
        <td class="data_table"> </td>
      </tr>
    <% else %>
      <% @task_list.each do |task| %>
        <tr>
          <td class="data_table"><%= task.owner %></td>
          <td class="data_table"><%= task.name %></td>
          <td class="data_table">
            <%= link_to 'Show Details', task_path(task) %>
            <% if task.owner == current_user.email %>
              <%= link_to 'Edit', edit_task_path(task) %>
              <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure you want to permanently delete this task?' } %>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </table>

  <br>
  <br>

  <div id="new_task_link_div" class="default_link_div">
    <p><%= link_to 'New Task', new_task_path, id: 'new_link' %></p>
  </div>
</div>