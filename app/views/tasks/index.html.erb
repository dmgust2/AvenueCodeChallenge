<h1>Todo List</h1>
<%= link_to "New Task", new_task_path, id: "new_link" %>

<h2>ALL Tasks</h2>
<div class="tasks" id="all_tasks">
  <%= render @all_tasks %>
</div>
<h2>Public Tasks</h2>
<div class="tasks" id="public_tasks">
